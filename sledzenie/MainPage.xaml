                <maps:MapSpan>
                    <x:Arguments>
                        <maps:Position>
                            <x:Arguments>
                                <x:Double>50.037385</x:Double>
                                <x:Double>22.003349</x:Double>
                            </x:Arguments>
                        </maps:Position>
                        <x:Double>0.04</x:Double>
